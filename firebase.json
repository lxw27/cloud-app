{
  "hosting": {
    "public": "task",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/login.html"
      },
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "**", 
        "destination": "/login.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "region": "asia-southeast1"
  }
}